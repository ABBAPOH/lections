CC=clang++ # compiler
CFLAGS=-c -Wall # compiler flags
LDFLAGS= # linker flags
SOURCES=src/main.cpp src/class.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=complex

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -rf src/*.o $(EXECUTABLE)

love:
	echo "not war"
